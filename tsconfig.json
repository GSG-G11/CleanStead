    "target": "es6",
    "module": "commonjs",
    "isolatedModules": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true 
  },
  "include": ["server/**/*.ts"],
}